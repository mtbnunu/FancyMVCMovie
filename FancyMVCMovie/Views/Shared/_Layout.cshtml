<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FANCY MVC MOVIE</title>

    <link href="~/Content/css/Site.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/materialize.css" rel="stylesheet" />

    <script src="~/Content/js/modernizr-2.6.2.js"></script>
    <script src="~/Content/js/jquery-1.10.2.min.js"></script>
    <script src="~/Content/js/materialize.min.js"></script>
</head>
<body>
    <main>
        <nav class=" grey darken-2" style="margin-bottom: 3em;">
            <div class="nav-wrapper container">
                <a href="@Url.Action("Index","Home")" class="brand-logo">Fancy MVC Movie</a>
                <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
                <ul class="right hide-on-med-and-down">
                    <li>
                        @Html.ActionLink("My Movies", "Index", "Home")
                    </li>
                    <li>
                        @Html.ActionLink("Add Movie", "New", "Home")
                    </li>
                </ul>
                <ul class="side-nav" id="mobile-demo">
                    <li>
                        @Html.ActionLink("My Movies", "Index", "Home")
                    </li>
                    <li>
                        @Html.ActionLink("Add Movie", "New", "Home")
                    </li>
                </ul>
            </div>
        </nav>

        <div class="container">
            @RenderBody()
        </div>
            </main>
    <footer class="page-footer  grey darken-2">
        <div class="container">
            <p class="grey-text text-lighten-4">MVC5 Example Project</p>

        </div>
        <div class="footer-copyright">
            <div class="container">
                &copy; @DateTime.Now.Year - Jae Yeong Bae
            </div>
        </div>
    </footer>
</body>
    <script>
        $(".button-collapse").sideNav();

        $(document).ready(function () {
            $('select').material_select();
        });
    </script>
    @{
        if (TempData.ContainsKey("Toast") && TempData["Toast"].Equals(true))
        {
        <text>
        <script>
            $(document).ready(function () {
                Materialize.toast("@Html.Raw((TempData["ToastMsg"]))", 4000);
            });
        </script>
        </text>
        }
    }

</html>
