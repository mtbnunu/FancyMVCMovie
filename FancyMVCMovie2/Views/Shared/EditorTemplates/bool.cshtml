@model bool?


<input type="checkbox" id="@ViewData.ModelMetadata.PropertyName" name="@ViewData.ModelMetadata.PropertyName" @(ViewData.Model != null && ViewData.Model == true ? "checked=checked" : "")
       @foreach (var vd in ViewData.Keys) { @vd <text>="@ViewData[vd]" </text>  } />
<label for="@ViewData.ModelMetadata.PropertyName">@ViewData.ModelMetadata.DisplayName</label>
